<events>
  <event
    id="0"
    name="SignalGen_SettingsChanged"
    severity="ACTIVITY_LO"
    format_string="Set Frequency(Hz) %d, Amplitude %d, Phase %d, Signal Type %s">
      <comment>Signal Generator Settings Changed</comment>
      <args>
        <arg 
          type="U32" 
          name="Frequency">
        </arg>
        <arg
          type="U32"
          name="Amplitude">
        </arg>
        <arg
          type="U32"
          name="Phase">
        </arg>
        <arg
          type="Ref::SignalType"
          name="SignalType">
        </arg>
      </args>
  </event>
  <event id="1" name="SignalGen_GenerateArray_Received" severity="ACTIVITY_HI" format_string = "Received a GenerateArray Command: example=%s" >
    <comment>
      The command dispatcher has successfully recieved a no op array command
    </comment>
    <args>
      <arg name="ArrayArg" type="Fw::ArrayType">
        <comment>An example array</comment>
      </arg>
    </args>
  </event>
</events>
