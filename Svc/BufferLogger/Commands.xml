<!--====================================================================== 

  ASTERIA
  BufferLogger
  Commands

======================================================================-->

<commands>

  <command kind="async" opcode="0x00" mnemonic="CloseFile">
    <comment>Close the currently open log file, if any</comment>
  </command>

  <command kind="async" opcode="0x01" mnemonic="SetSaveState">
    <comment>Sets the volatile logging state and saves the state to non-volatile memory</comment>
    <args>
      <arg name="state" type="OnOff">
        <comment>The state</comment>
      </arg>
    </args>
  </command>

  <command kind="async" opcode="0x02" mnemonic="SetVolatileState">
    <comment>Sets the volatile logging state</comment>
    <args>
      <arg name="state" type="OnOff">
        <comment>The state</comment>
      </arg>
    </args>
  </command>

  <command kind="async" opcode="0x03" mnemonic="SaveState">
    <comment>Saves the current volatile logging state to non-volatile memory</comment>
  </command>

  <command kind="async" opcode="0x04" mnemonic="LoadState">
    <comment>Loads the non-volatile logging state</comment>
  </command>

  <command kind="async" opcode="0x05" mnemonic="Flush">
    <comment>Flushes the current open log file to disk</comment>
  </command>

</commands>
