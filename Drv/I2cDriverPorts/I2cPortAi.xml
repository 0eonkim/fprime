<?xml version="1.0" encoding="UTF-8"?>
<?oxygen RNGSchema="file:../xml/ISF_Type_Schema.rnc" type="compact"?>

<interface name="I2c" namespace="Drv">
  <import_serializable_type>Fw/Buffer/BufferSerializableAi.xml</import_serializable_type>
    <args>
        <arg name="addr" type="U32">
            <comment>I2C slave device address</comment>
        </arg>
        <arg name="serBuffer" type="Fw::Buffer" pass_by="reference">
            <comment>Buffer with data to read/write to/from</comment>
        </arg>
    </args>
    <return type="ENUM" pass_by="value">
       <enum name="I2cStatus">
            <item name="I2C_OK" comment="Transaction okay"/>
            <item name="I2C_ADDRESS_ERR" comment="Parity error on data"/>           
            <item name="I2C_WRITE_ERR" comment="Serial driver ran out of buffers"/>           
            <item name="I2C_READ_ERR" comment="Target buffer is too small"/>           
            <item name="SER_OTHER_ERR" comment="Other errors that don't fit"/>           
       </enum>
   </return>
</interface>
